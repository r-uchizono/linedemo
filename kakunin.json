[{
    "type": "flex",
    "altText": "予約確認",
    "contents": {
        "type": "carousel",
        "contents": [
            {
                "type": "bubble",
                "header": {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                        {
                            "type": "text",
                            "text": "○○/○○会場",
                            "size": "md",
                            "position": "relative",
                            "align": "center",
                            "color": "#FFFFFF"
                        }
                    ]
                },
                "body": {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                        {
                            "type": "text",
                            "text": "年月日",
                            "size": "lg",
                            "margin": "none"
                        },
                        {
                            "type": "text",
                            "text": "開催時間",
                            "size": "16px"
                        },
                        {
                            "type": "text",
                            "text": "場所",
                            "size": "16px"
                        },
                        {
                            "type": "button",
                            "action": {
                                "type": "uri",
                                "label": "住所",
                                "uri": "https://www.google.com/maps/search/?api=1&query="
                            },
                            "offsetStart": "59px",
                            "offsetTop": "-15px"
                        },
                        {
                            "type": "text",
                            "text": "予約時間",
                            "size": "16px",
                            "offsetTop": "-30px"
                        },
                        {
                          "type": "text",
                          "text": "予約人数",
                          "size": "16px",
                          "offsetTop": "-30px"
                        },
                        {
                          "type": "text",
                          "text": "大人",
                          "size": "16px",
                          "offsetTop": "-30px"
                        },
                        {
                          "type": "text",
                          "text": "小人",
                          "size": "16px",
                          "offsetTop": "-30px"
                        }
                    ],
                    "backgroundColor": "#fbdac8",
                    "alignItems": "flex-start"
                },
                "footer": {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                        {
                            "type": "button",
                            "action": {
                            "type": "postback",
                            "label": "予約取消",
                            "data": "torikesi=id"
                            },
                            "color": "#FFFFFF"
                        },
                        {
                            "type": "button",
                            "action": {
                                "type": "datetimepicker",
                                "label": "時間変更",
                                "data": "henko=id",
                                "mode": "time",
                                "initial": "00:00",
                                "min": "00:00",
                                "max": "23:59"
                            },
                            "color": "#FFFFFF"
                        }
                    ]
                },
                "styles": {
                    "header": {
                        "backgroundColor": "#f3981d"
                    },
                    "footer": {
                        "backgroundColor": "#f3981d"
                    }
                }
            }
        ]
    }
    
}]